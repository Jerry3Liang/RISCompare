<?xml version="1.0" encoding="UTF-8" ?>
<configuration>
    <!-- 定義 Log 儲存位置 -->
    <!-- Mac 用 -->
<!--    <property name="LOG_HOME" value="/Users/liangchejui/Desktop/程式語言相關/RIS 比對小程式資料/Logs" />-->
    <!-- Windows 用 -->
    <property name="LOG_HOME" value="C:/比對小程式/Logs" />

    <!-- Rolling File Appender : 輸出到檔案，並每日產生一個 FILE -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_HOME}/比對小程式_%d{yyyy-MM-dd}.log</fileNamePattern>
            <!-- Log 保留天數 -->
            <maxHistory>30</maxHistory>
            <!-- Log 檔最大容量-->
            <totalSizeCap>500MB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <root level="INFO">
        <appender-ref ref="FILE" />
    </root>
    <root level="DEBUG">
        <appender-ref ref="FILE" />
    </root>
</configuration>